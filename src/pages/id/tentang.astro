---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import NavbarIndonesia from "../../components/NavbarIndonesia.astro";
import Footer from "../../components/Footer.astro";

const posts = await getCollection("about", ({ id }) => {
  return id === "id.md";
});

const post = posts[0];
const { Content } = await post.render();
---

<Layout
  title="Tentang | Asep Bagja"
  description="Siapa Asep Bagja? Cari tahu tentang dia di halaman ini."
  openGraph={{
    title: `Tentang | Asep Bagja`,
    url: "https://www.asepbagja.com/about",
    image: "https://www.asepbagja.com/images/about.jpg",
    type: "website",
  }}
>
  <NavbarIndonesia />
  <main class="container py-5">
    <div class="row mb-5">
      <div class="col-12">
        <h1 class="section-title text-center fs-1">Tentang Asep</h1>
      </div>
    </div>
    <article class="row">
      <div class="col-sm-12 col-lg-10 offset-lg-1 mb-2 blog">
        <Content />
      </div>
    </article>
  </main>
  <Footer />
</Layout>

<style is:global>
  div.blog a {
    color: var(--asep-red-3);
    text-decoration-style: dotted;
    font-weight: normal;
  }

  div.blog a:hover {
    color: var(--asep-primary);
  }

  div.blog p {
    font-family: "Source Serif 4", serif;
    font-size: 1.2rem;
    line-height: 2.25rem;
  }

  div.blog h3 {
    padding-top: 2rem;
    padding-bottom: 1.1rem;
  }

  div.blog ol,
  div.blog ul {
    margin-left: 2.5rem;
    font-family: "Source Serif 4", serif;
    font-size: 1.2rem;
    line-height: 2.25rem;
  }

  div.blog .figure {
    text-align: center;
  }

  div.blog .figure img {
    width: 70%;
  }

  div.blog .category-text a {
    color: var(--bs-light);
    text-decoration: none;
  }

  div.blog blockquote {
    background: #f9f9f9;
    border-left: 10px solid #ccc;
    margin: 1.5em 10px;
    padding: 0.5em 10px;
    quotes: "\201C""\201D""\2018""\2019";
  }

  div.blog blockquote:before {
    color: #ccc;
    content: open-quote;
    font-size: 4em;
    line-height: 0.1em;
    margin-right: 0.25em;
    vertical-align: -0.4em;
  }

  div.blog blockquote p {
    display: inline;
    font-size: 1.5rem;
    line-height: 2.25rem;
  }

  div.blog blockquote cite {
    font-size: 1rem;
  }

  hgroup .category-text {
    background-color: var(--asep-blue-4);
    color: var(--bs-light);
    padding: 0.2rem 0.5rem;
    border-radius: 5px;
  }

  hgroup .category-text a {
    color: var(--bs-light);
    text-decoration: none;
  }

  @media (max-width: 575.98px) {
    div.blog .figure img {
      width: 100%;
    }
  }

  @media (max-width: 767.98px) {
    div.blog .figure img {
      width: 100%;
    }
  }
</style>
