---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout
	title="Works | Asep Bagja"
	description="Asep Bagja's works - Coming Soon"
	openGraph={{
		title: "Works | Asep Bagja",
		url: "https://www.asepbagja.com/works",
		image: "https://www.asepbagja.com/images/works.jpg",
		type: "website",
	}}
>
	<Navbar />
	<div
		class="max-w-3xl px-4 mt-10 pt-10 lg:pt-14 pb-12 sm:px-6 lg:px-8 mx-auto"
	>
		<!-- Title -->
		<div class="mx-auto max-w-2xl mb-8 lg:mb-14 text-center">
			<h2
				class="text-5xl lg:text-4xl text-gray-800 font-bold dark:text-neutral-200"
			>
				Works
			</h2>
			<p class="mt-3 text-xl text-gray-800 dark:text-neutral-200">
				A showcase of my projects and creations
			</p>
		</div>

		<!-- Coming Soon Message -->
		<div class="mt-8 text-center">
			<svg
				class="w-12 h-12 mx-auto text-gray-400 dark:text-neutral-500"
				fill="none"
				stroke="currentColor"
				viewBox="0 0 24 24"
				xmlns="http://www.w3.org/2000/svg"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
			</svg>
			<h3
				class="mt-4 text-2xl font-semibold text-gray-800 dark:text-neutral-200"
			>
				Coming Soon
			</h3>
			<p class="mt-2 text-left text-xl text-gray-600 dark:text-neutral-400">
				I'm currently working on curating and organizing my portfolio of works.
				Check back soon to see a collection of my projects in software
				development, electronic music, and hardware design.
			</p>
			<p class="mt-2 text-xl text-left text-gray-600 dark:text-neutral-400">
				In the meantime, you can check out some of my public projects and
				contributions:
			</p>
			<ul
				class="text-left mt-8 space-y-2 list-disc list-inside text-gray-600 dark:text-neutral-400"
			>
				<li>
					<a
						href="https://github.com/bepitulaz"
						target="_blank"
						rel="noopener noreferrer"
						class="text-left text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300"
					>
						GitHub Profile
					</a>
				</li>
				<li>
					<a
						href="https://www.nanassound.com"
						target="_blank"
						rel="noopener noreferrer"
						class="text-left text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300"
					>
						Nanas Sound (Electronic Music Instruments)
					</a>
				</li>
			</ul>
		</div>
	</div>
	<Footer />
</Layout>
